@model List<IGrouping<string, DashmixPractice.Models.Social_Connections>>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Hero -->
<div class="bg-body-light">
    <div class="content content-full">
        <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
            <h1 class="flex-grow-1 fs-3 fw-semibold my-2 my-sm-3">Social Connections</h1>
        </div>
    </div>
</div>
<!-- END Hero -->
<!-- Page Content -->
<div class="content">

    <div class="block block-rounded">
        <div class="block-header block-header-default">
            <h3 class="block-title">Add New</h3><i class="fa fa-solid fa-plus-circle"></i>
        </div>
        <div class="block-content block-content-sm">

            <div class="row justify-content-center">

                <div class="col-lg-8 col-xl-5">
                    <form method="post" id="socialConnectionForm">
                        <input type="hidden" id="User_Id" name="User_Id" value="@Session["UserId"]" />
                        <div class="mb-4 mt-3">
                            <input type="text" class="form-control" id="Title" name="Title" placeholder="Enter Connection Title/Name">
                        </div>

                        <div class="mb-4 mt-3">
                            <div class="input-group">
                                <button class="btn btn-hero btn-sm btn-secondary dropdown-toggle" type="button" id="Platform" name="Platform" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Platform
                                </button>
                                <div class="dropdown-menu" aria-labelledby="socialMediaDropdown">
                                    <a class="dropdown-item" href="javascript:void(0)" data-value="Facebook"><i class='fab fa-facebook'></i> Facebook</a>
                                    <a class="dropdown-item" href="javascript:void(0)" data-value="Twitter"><i class="fab fa-twitter"></i> Twitter</a>
                                    <a class="dropdown-item" href="javascript:void(0)" data-value="Instagram"><i class="fab fa-instagram"></i> Instagram</a>
                                    <a class="dropdown-item" href="javascript:void(0)" data-value="Skype"><i class="fab fa-skype"></i> Skype</a>
                                    <a class="dropdown-item" href="javascript:void(0)" data-value="Github"><i class="fab fa-github"></i> Github</a>
                                    <a class="dropdown-item" href="javascript:void(0)" data-value="Pinterest"><i class="fab fa-pinterest"></i> Pinterest</a>
                                    <a class="dropdown-item" href="javascript:void(0)" data-value="Youtube"><i class="fab fa-youtube"></i> Youtube</a>
                                    <!-- Add more social media platforms as needed -->
                                </div>
                                <input type="text" class="form-control" id="Link" name="Link" placeholder="Enter URL of your Account" aria-label="Text input with dropdown button">
                            </div>
                        </div>

                        <div class="mb-4 mt-3 mb-3">
                            <input type="text" id="connectionUsername" name="connectionUsername" class="form-control form-control-alt disabled" placeholder="Username" />
                        </div>

                        <div class="mb-4 mt-3 mb-3">
                            <button type="button" id="btnAddSocialConnection" class="btn btn-hero btn-sm btn-primary mb-3">Add</button>
                            <button type="button" id="btnTestLink" class="btn btn-hero btn-sm btn-alt-info mb-3">Test Link</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <!-- Modal structure -->
    <div class="modal fade" id="addSocialConnectionModal" tabindex="-1" aria-labelledby="addSocialConnectionModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addSocialConnectionModalLabel">Add New Social Connection</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <form method="post" id="socialConnectionForm">
                        <input type="hidden" id="User_Id" name="User_Id" value="@Session["UserId"]" />
                        <div class="mb-4 mt-3">
                            <input type="text" class="form-control" id="Title" name="Title" placeholder="Enter Connection Title/Name">
                        </div>

                        <div class="mb-4 mt-3">
                            <div class="input-group">
                                <button class="btn btn-hero btn-sm btn-secondary dropdown-toggle" type="button" id="Platform" name="Platform" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Platform
                                </button>
                                <div class="dropdown-menu" aria-labelledby="socialMediaDropdown">
                                    <a class="dropdown-item" href="javascript:void(0)" data-value="Facebook"><i class='fab fa-facebook'></i> Facebook</a>
                                    <a class="dropdown-item" href="javascript:void(0)" data-value="Twitter"><i class="fab fa-twitter"></i> Twitter</a>
                                    <a class="dropdown-item" href="javascript:void(0)" data-value="Instagram"><i class="fab fa-instagram"></i> Instagram</a>
                                    <a class="dropdown-item" href="javascript:void(0)" data-value="Skype"><i class="fab fa-skype"></i> Skype</a>
                                    <a class="dropdown-item" href="javascript:void(0)" data-value="Github"><i class="fab fa-github"></i> Github</a>
                                    <a class="dropdown-item" href="javascript:void(0)" data-value="Pinterest"><i class="fab fa-pinterest"></i> Pinterest</a>
                                    <a class="dropdown-item" href="javascript:void(0)" data-value="Youtube"><i class="fab fa-youtube"></i> Youtube</a>
                                    <!-- Add more social media platforms as needed -->
                                </div>
                                <input type="text" class="form-control" id="Link" name="Link" placeholder="Enter URL of your Account" aria-label="Text input with dropdown button">
                            </div>
                        </div>

                        @*<div class="mb-4 mt-3 mb-3">
                            <button type="button" id="btnAddSocialConnection" class="btn btn-hero btn-sm btn-primary mb-3">Add</button>
                            <button type="button" id="btnTestLink" class="btn btn-hero btn-sm btn-alt-info mb-3">Test Link</button>
                        </div>*@
                    </form>

                </div>
                <div class="modal-footer">
                    <button type="button" id="btnAddSocialConnection" class="btn btn-hero btn-sm btn-primary">Add</button>
                    <button type="button" id="btnTestLink" class="btn btn-hero btn-sm btn-alt-info">Test Link</button>
                    @*<button type="button" class="btn btn-sm btn-hero btn-secondary" data-bs-dismiss="modal">Close</button>*@
                </div>
            </div>
        </div>
    </div>




    <!-- Full Table -->
    <div class="block block-rounded">
        <div class="block-header block-header-default">
            <h2 class="block-title">Created Connections</h2>
            @*<div class="block-options">
                <button type="button" class="btn btn-sm btn-hero btn-primary" data-bs-toggle="modal" data-bs-target="#addSocialConnectionModal">
                    <i class="fa fa-fw fa-plus"></i> Add New Connection
                </button>
            </div>*@
        </div>
        <div class="block-content">
            <div class="table-responsive">
                <table class="table table-borderless table-hover table-vcenter js-table-sections" id="socialConnectionsListTable">
                    @Html.Partial("_SocialConnectionsList", Model)
                </table>
            </div>
        </div>
    </div>
    <!-- END Full Table -->

</div>
<!-- END Page Content -->
